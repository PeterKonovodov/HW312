<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <TextView
        android:id="@+id/headerText"
        android:layout_width="wrap_content"
        android:layout_height="30dp"
        android:text="@string/whatis"
        android:paddingStart="10dp"
        android:gravity="center|start"
        android:layout_alignParentTop="true"
        android:layout_alignParentStart="true"
        />

    <TextView
        android:id="@+id/calcScreen"
        android:layout_width="360dp"
        android:layout_centerHorizontal="true"
        android:layout_height="100dp"
        android:textSize="70sp"
        android:fontFamily="@font/digital7_mono_italic"
        android:text=""
        android:textColor="@color/colorScreenText"
        android:background="@color/colorScreenBG"
        android:gravity="center|end"
        android:paddingEnd="20dp"
        android:paddingStart="20dp"
        android:layout_below="@id/headerText"
        />
    <TextView
        android:id="@+id/calcTitle"
        android:layout_width="match_parent"
        android:layout_height="30dp"
        android:text="@string/calcname"
        android:gravity="center|end"
        android:paddingEnd="20dp"
        android:layout_below="@id/calcScreen"
        />
<RelativeLayout
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_below="@id/calcTitle"
    android:layout_centerHorizontal="true"
    android:gravity="center|top">


    <Button
        android:id="@+id/buttonC"
        android:layout_width="60dp"
        android:layout_height="60dp"
        android:textSize="30sp"
        android:text="C"
        />
    <Button
        android:id="@+id/buttonSign"
        android:layout_width="60dp"
        android:layout_height="60dp"
        android:layout_alignTop="@id/buttonC"
        android:layout_toRightOf="@id/buttonC"
        android:textSize="30sp"
        android:text="\u00b1"
        />
    <Button
        android:id="@+id/buttonPercent"
        android:layout_width="60dp"
        android:layout_height="60dp"
        android:layout_alignTop="@id/buttonC"
        android:layout_toRightOf="@id/buttonSign"
        android:textSize="30sp"
        android:text="%"
        />
    <Button
        android:id="@+id/buttonDiv"
        android:layout_width="60dp"
        android:layout_height="60dp"
        android:layout_alignTop="@id/buttonC"
        android:theme="@style/ActionButtonsTheme"
        android:layout_toRightOf="@id/buttonPercent"
        android:textSize="30sp"
        android:text="\u00f7"
        />

    <Button
        android:id="@+id/button7"
        android:layout_width="60dp"
        android:layout_height="60dp"
        android:layout_below="@id/buttonC"
        android:layout_alignLeft="@id/buttonC"
        android:textSize="30sp"
        android:text="7"
        />

    <Button
        android:id="@+id/button8"
        android:layout_width="60dp"
        android:layout_height="60dp"
        android:layout_below="@id/buttonC"
        android:layout_toRightOf="@id/button7"
        android:textSize="30sp"
        android:text="8"
        />
    <Button
        android:id="@+id/button9"
        android:layout_width="60dp"
        android:layout_height="60dp"
        android:layout_below="@id/buttonC"
        android:layout_toRightOf="@id/button8"
        android:textSize="30sp"
        android:text="9"
        />
    <Button
        android:id="@+id/buttonMul"
        android:layout_width="60dp"
        android:layout_height="60dp"
        android:layout_below="@id/buttonC"
        android:layout_toRightOf="@id/button9"
        android:theme="@style/ActionButtonsTheme"
        android:textSize="30sp"
        android:text="\u00d7"
        />
    <Button
        android:id="@+id/button4"
        android:layout_width="60dp"
        android:layout_height="60dp"
        android:layout_below="@id/button7"
        android:layout_alignLeft="@id/button7"
        android:textSize="30sp"
        android:text="4"
        />
    <Button
        android:id="@+id/button5"
        android:layout_width="60dp"
        android:layout_height="60dp"
        android:layout_below="@id/button7"
        android:layout_toRightOf="@id/button4"
        android:textSize="30sp"
        android:text="5"
        />
    <Button
        android:id="@+id/button6"
        android:layout_width="60dp"
        android:layout_height="60dp"
        android:layout_below="@id/button7"
        android:layout_toRightOf="@id/button5"
        android:textSize="30sp"
        android:text="6"
        />
    <Button
        android:id="@+id/buttonMinus"
        android:layout_width="60dp"
        android:layout_height="60dp"
        android:layout_below="@id/button7"
        android:theme="@style/ActionButtonsTheme"
        android:layout_toRightOf="@id/button6"
        android:textSize="30sp"
        android:text="-"
        />
    <Button
        android:id="@+id/button1"
        android:layout_width="60dp"
        android:layout_height="60dp"
        android:layout_below="@id/button4"
        android:layout_alignLeft="@id/button4"
        android:textSize="30sp"
        android:text="1"
        />
    <Button
        android:id="@+id/button2"
        android:layout_width="60dp"
        android:layout_height="60dp"
        android:layout_below="@id/button4"
        android:layout_toRightOf="@id/button1"
        android:textSize="30sp"
        android:text="2"
        />
    <Button
        android:id="@+id/button3"
        android:layout_width="60dp"
        android:layout_height="60dp"
        android:layout_below="@id/button4"
        android:layout_toRightOf="@id/button2"
        android:textSize="30sp"
        android:text="3"
        />

    <Button
        android:id="@+id/buttonPlus"
        android:layout_width="60dp"
        android:layout_height="60dp"
        android:layout_below="@id/button4"
        android:layout_toRightOf="@id/button3"
        android:theme="@style/ActionButtonsTheme"
        android:textSize="30sp"
        android:text="+"
        />
    <Button
        android:id="@+id/button0"
        android:layout_width="120dp"
        android:layout_height="60dp"
        android:layout_below="@id/button1"
        android:layout_alignLeft="@id/button1"
        android:textSize="30sp"
        android:text="0"
        />
    <Button
        android:id="@+id/buttonDot"
        android:layout_width="60dp"
        android:layout_height="60dp"
        android:layout_below="@id/button1"
        android:layout_toRightOf="@id/button0"
        android:textSize="30sp"
        android:text="."
        />
    <Button
        android:id="@+id/buttonEqual"
        android:layout_width="60dp"
        android:layout_height="60dp"
        android:layout_below="@id/button1"
        android:layout_toRightOf="@id/buttonDot"
        android:textSize="30sp"
        android:theme="@style/ActionButtonsTheme"
        android:text="="
        />
</RelativeLayout>








</RelativeLayout>